{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "regexManagers": [
    {
      "description": "Renovate version",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        ".*# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+) versioning=(?<versioning>\\S+)\\sARG .*_VERSION=(?<currentValue>.*).*"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "description": "Node version",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\sRUN install-.* node (?<currentValue>\\S+).*"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "description": "Yarn version",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( lookupName=(?<lookupName>.*?))?( versioning=(?<versioning>.*?))?\\sRUN install-.* yarn (?<currentValue>.*).*\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "description": "Docker version",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>\\S+) lookupName=(?<lookupName>\\S+)\nRUN install-.* docker (?<currentValue>.*).*"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "prHourlyLimit": 0,
  "requiredStatusChecks": null,
  "platformAutomerge": true
}
